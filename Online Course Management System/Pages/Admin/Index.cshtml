@page
@model Online_Course_Management_System.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <!-- Top Bar with Logout -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">📊 Admin Dashboard</h2>
        <form asp-controller="Auth" asp-action="Logout" method="post">
            <button type="submit" class="btn btn-danger rounded-pill px-4 shadow-sm">
                🚪 Logout
            </button>
        </form>
    </div>

    <p class="text-muted">Welcome to the Online Course Management System</p>
    <hr />

    <!-- Dashboard Grid -->
    <div class="row g-4 mt-3">
        <!-- Courses -->
        <div class="col-md-4">
            <a class="card h-100 text-center shadow-lg border-0 text-decoration-none dashboard-card"
               asp-page="/Admin/Courses/Index">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="mb-3 fs-1">🎓</div>
                    <h3 class="card-title fw-bold">Courses</h3>
                    <p class="text-muted">Manage and view all courses</p>
                </div>
            </a>
        </div>

        <!-- Students -->
        <div class="col-md-4">
            <a class="card h-100 text-center shadow-lg border-0 text-decoration-none dashboard-card"
               asp-page="/Admin/Students/Index">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="mb-3 fs-1">👩‍🎓</div>
                    <h3 class="card-title fw-bold">Students</h3>
                    <p class="text-muted">View and edit student information</p>
                </div>
            </a>
        </div>

        <!-- Enrollments -->
        <div class="col-md-4">
            <a class="card h-100 text-center shadow-lg border-0 text-decoration-none dashboard-card"
               asp-page="/Admin/Enrollments/Index">
                <div class="card-body d-flex flex-column justify-content-center">
                    <div class="mb-3 fs-1">📝</div>
                    <h3 class="card-title fw-bold">Enrollments</h3>
                    <p class="text-muted">Track student course enrollments</p>
                </div>
            </a>
        </div>
    </div>
</div>

<!-- Extra Styling -->
<style>
    .dashboard-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 15px;
    }

        .dashboard-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.15);
        }
</style>
