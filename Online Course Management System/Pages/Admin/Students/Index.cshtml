@page
@model Online_Course_Management_System.Pages.Admin.Students.IndexModel
@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <!-- Header -->
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">👩‍🎓 Students</h3>
            <a asp-page="/Admin/Students/Add" class="btn btn-light">➕ Add New Student</a>
        </div>

        <!-- Body -->
        <div class="card-body">
            <!-- Search Bar -->
            <form method="get" class="mb-3 d-flex">
                <input type="text" name="searchTerm"
                       class="form-control me-2" placeholder="🔍 Search by name or email" />
                <button type="submit" class="btn btn-outline-primary">Search</button>
            </form>

            <!-- Students Table -->
            @if (Model.Students.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Enrolled Courses</th>
                                <th style="width: 220px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model.Students)
                            {
                                <tr>
                                    <td>@student.Name</td>
                                    <td>@student.Email</td>
                                    <td>@student.Enrollments.Count</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-page="/Admin/Students/Edit" asp-route-id="@student.UserId"
                                               class="btn btn-sm btn-outline-warning">✏️ Edit</a>

                                            <a asp-page="/Admin/Students/StudentDetails" asp-route-id="@student.Id"
                                               class="btn btn-sm btn-outline-info">ℹ️ Details</a>

                                            <form method="post" asp-page-handler="Delete" asp-route-id="@student.Id"
                                                  onsubmit="return confirm('Are you sure you want to delete this student?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">🗑️ Delete</button>
                                            </form>
                                        </div>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">No students found. Try adding a new student.</div>
            }
        </div>

        <!-- Footer -->
        <div class="card-footer text-end">
            <a asp-page="/Admin/Index" class="btn btn-secondary">⬅️ Back</a>
        </div>
    </div>
</div>
