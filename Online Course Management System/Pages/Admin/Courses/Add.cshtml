@page
@model Online_Course_Management_System.Pages.Admin.Courses.AddModel
@{
    ViewData["Title"] = "Add Course";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <!-- Header -->
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">📚 Add New Course</h3>
        </div>

        <!-- Body -->
        <div class="card-body">
            <form method="post" class="row g-3">
                <!-- Title -->
                <div class="col-12">
                    <label asp-for="NewCourse.Title" class="form-label">📖 Title</label>
                    <input asp-for="NewCourse.Title"
                           class="form-control @(ViewData.ModelState["NewCourse.Title"]?.Errors.Count > 0 ? "is-invalid" : "")"
                           placeholder="Enter course title" />
                    <span asp-validation-for="NewCourse.Title" class="invalid-feedback"></span>
                </div>

                <!-- Description -->
                <div class="col-12">
                    <label asp-for="NewCourse.Description" class="form-label">📝 Description</label>
                    <textarea asp-for="NewCourse.Description"
                              class="form-control @(ViewData.ModelState["NewCourse.Description"]?.Errors.Count > 0 ? "is-invalid" : "")"
                              rows="3" placeholder="Enter course description"></textarea>
                    <span asp-validation-for="NewCourse.Description" class="invalid-feedback"></span>
                </div>

                <!-- Price -->
                <div class="col-md-4">
                    <label asp-for="NewCourse.Price" class="form-label">💲 Price</label>
                    <input asp-for="NewCourse.Price" type="number" step="0.01"
                           class="form-control @(ViewData.ModelState["NewCourse.Price"]?.Errors.Count > 0 ? "is-invalid" : "")"
                           placeholder="Enter price" />
                    <span asp-validation-for="NewCourse.Price" class="invalid-feedback"></span>
                </div>

                <!-- Start Date -->
                <div class="col-md-4">
                    <label asp-for="NewCourse.StartDate" class="form-label">📅 Start Date</label>
                    <input asp-for="NewCourse.StartDate" type="date"
                           class="form-control @(ViewData.ModelState["NewCourse.StartDate"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                    <span asp-validation-for="NewCourse.StartDate" class="invalid-feedback"></span>
                </div>

                <!-- End Date -->
                <div class="col-md-4">
                    <label asp-for="NewCourse.EndDate" class="form-label">📅 End Date</label>
                    <input asp-for="NewCourse.EndDate" type="date"
                           class="form-control @(ViewData.ModelState["NewCourse.EndDate"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                    <span asp-validation-for="NewCourse.EndDate" class="invalid-feedback"></span>
                </div>

                <!-- Buttons -->
                <div class="col-12 d-flex justify-content-between mt-3">
                    <a asp-page="/Admin/Courses/Index" class="btn btn-secondary">⬅️ Back</a>
                    <button type="submit" class="btn btn-success px-4"
                            onclick="return confirm('Are you sure you want to add this course?');">
                        ➕ Add Course
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
