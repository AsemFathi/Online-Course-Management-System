<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Course Management System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Online_Course_Management_System.styles.css" asp-append-version="true" />
</head>
<body class="bg-light d-flex flex-column min-vh-100">

    

    <!-- Main Content -->
    <main role="main" class="flex-fill">
        <div class="container py-5">
            <body class="bg-light d-flex flex-column min-vh-100">
                <header>
                    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
                        <div class="container">
                            <a class="navbar-brand fw-bold text-primary" asp-area="">
                                🎓 Online Course Management
                            </a>
                        </div>
                    </nav>
                </header>

                <main role="main" class="flex-fill">
                    <div class="container py-5 mt-5">
                        @RenderBody()
                    </div>
                </main>

                <footer class="border-top text-muted text-center py-3 mt-auto bg-white shadow-sm">
                    <div class="container">
                        &copy; 2025 - Online Course Management System
                    </div>
                </footer>
            </body>

            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
