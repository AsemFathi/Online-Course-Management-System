@page
@using Online_Course_Management_System.Models
@model Online_Course_Management_System.Pages.StudentPages.StudentDashboardModel
@{
    ViewData["Title"] = "Student Dashboard";
}

<div class="container mt-5">
    <!-- Welcome Message -->
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary">Welcome, @Model.Username 👋</h2>
        <p class="text-muted">Manage your courses, profile, and progress here.</p>
    </div>

    <!-- Grid Layout -->
    <div class="row g-4">
        <!-- Profile Card -->
        <!-- Profile Card -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-body text-center">
                    <img src="~/images/user.png"
                         alt="Default Profile"
                         class="rounded-circle mb-3"
                         width="100" height="100" />

                    <h5 class="card-title">@User.Identity?.Name</h5>
                    <p class="text-muted">Student</p>

                    <!-- Profile Actions -->
                    <div class="d-grid gap-2">
                        <a asp-page="/Student/Profile" class="btn btn-outline-primary btn-sm">Edit Profile</a>

                        <!-- Logout Button -->
                        <form method="post" asp-page-handler="Logout">
                            <button type="submit" class="btn btn-danger btn-sm">Logout 🚪</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        
        <!-- Enrolled Courses -->
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📚 My Enrolled Courses</h5>
                </div>
                <div class="card-body">
                    @if (Model.Student.Enrollments != null && Model.Student.Enrollments.Any())
                    {
                        <div class="list-group">
                            @foreach (var enrollment in Model.Student.Enrollments)
                            {
                                <a asp-page="/Student/CourseDetails" asp-route-id="@enrollment.Course.Id"
                                   class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <span>@enrollment.Course.Title</span>
                                    <span class="badge bg-success rounded-pill">In Progress</span>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">You are not enrolled in any courses yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Suggested Courses -->
    <div class="row g-4 mt-4">
        <div class="col-12">
            <div class="card shadow-sm border-0 rounded-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">✨ Suggested Courses</h5>
                </div>
                <div class="card-body">
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        @foreach (var course in Model.SuggestedCourses)
                        {
                            <div class="col">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body">
                                        <h6 class="card-title text-primary">@course.Title</h6>
                                        <p class="card-text text-muted">@course.Description</p>
                                        <p class="card-text text-muted">@course.Price $</p>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <form method="post" asp-page-handler="Enroll">
                                            <input type="hidden" name="courseId" value="@course.Id" />
                                            <input type="hidden" name="userId" value="@Model.Student.UserId" />
                                            <button type="submit" class="btn btn-primary">Enroll ➕</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
