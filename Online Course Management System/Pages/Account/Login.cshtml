@page
@model Online_Course_Management_System.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">

                <!-- Card Header -->
                <div class="card-header text-center bg-gradient"
                     style="background: linear-gradient(135deg, #007bff, #6610f2);">
                    <h3 class="text-white mb-0">🔐 Login</h3>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4">
                    <form method="post">
                        <!-- Username -->
                        <div class="mb-3">
                            <label asp-for="User.Username" class="form-label fw-semibold">👤 Username</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-person"></i></span>
                                <input asp-for="User.Username" class="form-control" placeholder="Enter username" />
                            </div>
                            <span asp-validation-for="User.Username" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="User.Password" class="form-label fw-semibold">🔑 Password</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light"><i class="bi bi-lock"></i></span>
                                <input asp-for="User.Password" type="password" class="form-control" placeholder="Enter password" />
                            </div>
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill shadow-sm">
                            🚀 Login
                        </button>
                    </form>
                </div>

                <!-- Footer -->
                <div class="card-footer text-center bg-light">
                    <small class="text-muted">
                        Don’t have an account? <a asp-page="/Account/Register" class="text-decoration-none">Register here</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Toast -->
@if (!string.IsNullOrEmpty(Model.ToastMessage))
{
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast show align-items-center text-white bg-danger border-0" role="alert">
            <div class="d-flex">
                <div class="toast-body">
                    @Model.ToastMessage
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
